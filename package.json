{
  "name": "momtasker",
  "productName": "MomTasker",
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "main": "public/electron.js",
  "build": {
    "appId": "com.todo_app",
    "win": {
      "target": "nsis"
    }
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "concurrently": "^6.3.0",
    "cors": "^2.8.5",
    "electron-is-dev": "^2.0.0",
    "express": "^4.18.2",
    "nedb": "^1.8.0",
    "nodemon": "^2.0.22",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.9.0",
    "react-push-notification": "^1.5.3",
    "react-router-dom": "^6.13.0",
    "react-scripts": "4.0.3",
    "socket.io": "^4.6.2",
    "socket.io-client": "^4.6.2",
    "wait-on": "^6.0.0",
    "web-vitals": "^1.0.1"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "release": "react-scripts build && electron-builder --publish=always",
    "dev": "concurrently \"SET BROWSER=none && npm run react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "start": "concurrently \"SET BROWSER=none && npm run react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "react-scripts build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^13.2.1",
    "electron-builder": "^22.13.1"
  }
}
